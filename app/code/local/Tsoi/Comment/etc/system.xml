<?xml version="1.0"?>
<config>
    <tabs>
        <tsoi translate="label" module="tsoi_comment">
            <label>Tsoi comment</label>
            <sort_order>2</sort_order>
        </tsoi>
    </tabs>
    <sections>
        <tsoi_comment translate="label" module="tsoi_comment">
            <label>Tsoi comment</label>
            <tab>tsoi</tab>
            <frontend>text</frontend>
            <sort_order>1</sort_order>
            <show_in_default>1</show_in_default>
            <show_in_store>1</show_in_store>
            <show_in_Website>1</show_in_Website>
            <groups>
                <settings>
                    <label>Settings</label>
                    <expanded>1</expanded>
                    <sort_order>1</sort_order>
                    <show_in_default>1</show_in_default>
                    <show_in_store>1</show_in_store>
                    <show_in_Website>1</show_in_Website>
                    <fields>
                        <enabled translate="label tsoi_comment" module="tsoi_comment">
                            <label>Enabled</label>
                            <frontend_type>select</frontend_type>
                            <source_model>tsoi_comment/source_myoptions</source_model>
                            <sort_order>1</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_store>1</show_in_store>
                            <show_in_Website>1</show_in_Website>
                            <tsoi_comment>Is module enabled</tsoi_comment>
                        </enabled>
                        <comment_count translate="label tsoi_comment" module="tsoi_comment">
                            <label>Comments on page</label>
                            <frontend_type>text</frontend_type>
                            <sort_order>2</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_store>1</show_in_store>
                            <show_in_Website>1</show_in_Website>
                            <depends>
                                <enabled>1</enabled>
                            </depends>
                        </comment_count>
                    </fields>
                </settings>
            </groups>
        </tsoi_comment>
    </sections>
</config>